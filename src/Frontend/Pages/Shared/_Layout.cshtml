<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - E-Bazar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Frontend.styles.css" asp-append-version="true"/>
</head>
<body>

<div class="d-flex flex-column min-vh-100">
    <header>
        <partial name="_navPartial" />
    </header>

    <main class="flex-fill">
        <div class="container py-3">
            @RenderBody()
        </div>
    </main>

    @* <footer class="border-top footer text-muted mt-auto py-3"> *@
    @*     <div class="container"> *@
    @*         &copy; 2025 - Frontend - <a asp-area="" asp-page="/Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@
</div>




<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="/js/cart.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>